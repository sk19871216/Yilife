<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_login"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/quick_back"
            android:paddingRight="10dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:src="@drawable/icon_back_black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_centerInParent="true"
            android:textSize="17sp"
            android:text="快速登录"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <TextView
        android:background="#909090"
        android:layout_width="match_parent"
        android:layout_height="1dp" />
    <LinearLayout
        android:layout_marginTop="45dp"
        android:layout_marginLeft="29dp"
        android:layout_marginRight="29dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:background="@drawable/button_white"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:paddingRight="15dp"
            android:paddingLeft="15dp"
            android:layout_marginTop="9dp"
            android:layout_marginBottom="7dp"
            android:src="@drawable/touxiang_new"
            android:textSize="15sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <com.jiuan.android.app.yilife.config.EditTextWithDel

            android:layout_marginRight="10dp"
            android:layout_gravity="center_vertical"
            android:background="@null"
            android:id="@+id/quick_user"
            android:inputType="phone"
            android:singleLine="true"
            android:hint="11位手机号"
            android:textSize="17sp"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/quick_button_getchecknumber"
            android:layout_marginRight="3dp"
            android:textSize="15sp"
            android:background="@drawable/button_blue_durk"
            android:textColor="#fff"
            android:text="获取验证码"
            android:gravity="center"
            android:layout_width="85dp"
            android:layout_height="37dp" />
    </LinearLayout>
    <LinearLayout
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="29dp"
        android:layout_marginRight="29dp"
        android:background="@drawable/button_white"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:paddingRight="15dp"
            android:paddingLeft="15dp"
            android:layout_marginTop="9dp"
            android:layout_marginBottom="7dp"
            android:src="@drawable/icon_msg_new"
            android:textSize="15sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <com.jiuan.android.app.yilife.config.EditTextWithDel

            android:layout_marginRight="10dp"
            android:layout_gravity="center_vertical"
            android:background="@null"
            android:id="@+id/quick_msg"
            android:inputType="number"
            android:singleLine="true"
            android:hint="短信验证码"
            android:textSize="17sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>




    <ImageView
        android:id="@+id/quick_done"
        android:layout_marginTop="45dp"
        android:src="@drawable/icon_blueframe"
        android:layout_marginRight="25dp"
        android:layout_marginLeft="25dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    </LinearLayout>
    <ImageView
        android:layout_marginBottom="40dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/all_resg"/>
</RelativeLayout>
