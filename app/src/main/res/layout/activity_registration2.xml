<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:textColor="#000"
        android:layout_marginBottom="14dp"
        android:layout_marginTop="22dp"
        android:paddingLeft="15dp"
        android:textSize="14sp"
        android:id="@+id/registration2_textview_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:orientation="vertical"
        >
        <TextView
            android:background="#dadada"
            android:layout_width="match_parent"
            android:layout_height="1dp" />
        <LinearLayout
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:layout_gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView

                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/icon_message"
                android:textSize="19sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <com.jiuan.android.app.yilife.config.EditTextWithDel
                android:layout_marginRight="10dp"

                android:background="@null"
                android:inputType="number"
                android:layout_gravity="center_vertical"
                android:id="@+id/registration2_edittext_checknumber"
                android:hint="填写短信验证码"
                android:singleLine="true"
                android:textSize="17sp"
                android:layout_width="wrap_content"
                android:layout_weight="3"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_marginTop="3dp"
                android:layout_marginBottom="3dp"

                android:id="@+id/registration2_button_getchecknumber"
                android:gravity="center"
                android:background="@drawable/textview_outline"
                android:text="60秒"
                android:textColor="#a3a3a3"
                android:textSize="15sp"

                android:layout_width="105dp"
                android:layout_height="30dp" />
            <TextView
                android:layout_width="7dp"
                android:layout_height="match_parent" />
        </LinearLayout>
        <TextView
            android:background="#dadada"
            android:layout_width="match_parent"
            android:layout_height="1dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="40dp">

    </LinearLayout>
    <Button
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:id="@+id/registration2_button_checkphone"
        android:background="@drawable/button_blue"
        android:text="下一步，设置密码"
        android:textColor="#fff"
        android:textSize="17sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>