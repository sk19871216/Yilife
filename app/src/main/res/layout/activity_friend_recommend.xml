<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <include android:id="@+id/friend_actionbar" layout="@layout/title_text"></include>

    <LinearLayout
        android:id="@+id/friend_linearlayout"
        android:layout_below="@+id/friend_actionbar"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/invitation_friend"
                android:layout_marginRight="40dp"
                android:layout_marginLeft="40dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/text_invitationfriend"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="8dp"
                    android:textSize="15sp"
                    android:layout_gravity="center_horizontal"
                    android:textColor="#209df3"
                    android:text="邀请好友"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <FrameLayout
                    android:id="@+id/line_invitationfriend"
                    android:background="#209df3"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"></FrameLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/invitation_code"
                android:layout_marginRight="40dp"
                android:layout_marginLeft="40dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:textColor="#7d7d80"
                    android:id="@+id/text_invitationcode"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="8dp"
                    android:textSize="15sp"
                    android:layout_gravity="center_horizontal"
                    android:text="邀请码填写"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <FrameLayout
                    android:id="@+id/line_invitationcode"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"></FrameLayout>
            </LinearLayout>
        </LinearLayout>
        <FrameLayout
            android:background="#dcdce0"
            android:layout_width="match_parent"
            android:layout_height="1dp"></FrameLayout>
    </LinearLayout>

    <android.support.v4.view.ViewPager
        android:layout_marginTop="1dp"
        android:id="@+id/friend_framelayout"
        android:layout_below="@id/friend_linearlayout"
        android:paddingTop="12dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
    </android.support.v4.view.ViewPager>
</RelativeLayout>
