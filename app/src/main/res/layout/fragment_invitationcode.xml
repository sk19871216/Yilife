<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingRight="15dp"
    android:paddingLeft="15dp"
    >
    <LinearLayout

        android:id="@+id/linearlayout_isinvited_false"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/et_invitationcode"
            android:layout_marginTop="30dp"
            android:paddingTop="10dp"
            android:paddingLeft="10dp"
            android:paddingBottom="10dp"
            android:textSize="16sp"
            android:background="@drawable/button_white"
            android:hint="请好友输入邀请码"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_commit_invitationcode"
            android:textSize="16sp"
            android:layout_gravity="center"
            android:gravity="center"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_marginTop="18dp"
            android:text="立即提交"
            android:textColor="#fff"
            android:background="@drawable/button_blue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:visibility="gone"
        android:id="@+id/linearlayout_isinvited_true"
        android:layout_marginTop="30dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_marginBottom="10dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/smile_invitedcode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginBottom="5dp"
            android:textSize="20sp"
            android:text="您已提交好友推荐并建立关系！"
            android:layout_marginTop="10dp"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <TextView
        android:textSize="14sp"
        android:layout_marginTop="30dp"
        android:text="温馨提示："
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:lineSpacingExtra="5dp"
        android:layout_marginTop="5dp"
        android:textSize="14sp"
        android:text="1.输入好友邀请码即成为推荐关系，相互推荐可获取不错的收益哦！"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_marginTop="5dp"
        android:textSize="14sp"
        android:text="2.可在“我的收益”进行关系查看。"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>