                            <!--android:id="@+id/tv_shownote_time"-->
                            <!--android:layout_width="wrap_content"-->
                            <!--android:layout_height="wrap_content" />-->
                    <!--</LinearLayout>-->
                    <TextView
                        android:layout_marginLeft="10dp"
                        android:layout_gravity="center_vertical"
                        android:singleLine="true"
                        android:id="@+id/tv_shownote_floor"
                        android:layout_toRightOf="@+id/linearlayout_jinghua_time"
                        android:text="#1"
                        android:textSize="12sp"
                        android:textColor="#8c8c8c"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    </LinearLayout>
            <TextView
                android:layout_alignParentLeft="true"
                android:layout_toLeftOf="@+id/linearlayout_rightside1"
                android:id="@+id/tv_shownote_name"
                android:ellipsize="end"
                android:singleLine="true"
                android:textSize="14sp"
                android:text="18600436486"
                android:textColor="#209df3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    <TextView
        android:paddingLeft="1dp"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:text="1111222222222222222222222"
        android:lineSpacingExtra="3sp"
        android:textSize="15sp"
        android:textColor="#000"
        android:id="@+id/tv_show_reply"
        android:ellipsize="end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <RelativeLayout
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:visibility="gone"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
