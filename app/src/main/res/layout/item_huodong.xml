<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:paddingRight="20dp"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_marginLeft="10dp"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_centerHorizontal="true"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/hd_hideline"
                android:background="#becbd3"
                android:layout_width="7dp"
                android:layout_height="20dp" />
            <TextView
                android:background="#becbd3"
                android:layout_width="7dp"
                android:layout_height="match_parent" />
        </LinearLayout>

        <ImageView
            android:id="@+id/hd_jiantou"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="14dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/hd_down"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/hd_item"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="14dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:gravity="center_vertical"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingRight="8dp"
                android:paddingLeft="8dp"
                android:textColor="#fff"
                android:background="@drawable/button_blue"
                android:text="活动"
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/hd_title"
                android:singleLine="true"
                android:ellipsize="end"
                android:layout_marginLeft="12dp"
                android:text=""
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <RelativeLayout
            android:layout_marginTop="10dp"
            android:background="#fff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/hd_hd"
                android:scaleType="fitXY"
                android:padding="5dp"
                android:layout_width="match_parent"
                android:layout_height="140dp" />
            <ImageView
                android:id="@+id/hd_state"
                android:padding="4dp"
                android:scaleType="fitXY"
                android:src="@drawable/hd_closing"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <RelativeLayout
            android:paddingRight="4dp"
            android:paddingLeft="4dp"
            android:paddingTop="7dp"
            android:paddingBottom="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_centerVertical="true"
                android:id="@+id/hd_time"
                android:drawableLeft="@drawable/hd_time"
                android:drawablePadding="4dp"
                android:text=""
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_centerVertical="true"
                android:id="@+id/hd_share"
                android:drawableLeft="@drawable/hd_share"
                android:drawablePadding="4dp"
                android:text="分享"
                android:textSize="12sp"
                android:textColor="#55b2f1"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <FrameLayout
            android:background="#cccccc"
            android:layout_width="match_parent"
            android:layout_height="1dp"></FrameLayout>
    </LinearLayout>

</LinearLayout>