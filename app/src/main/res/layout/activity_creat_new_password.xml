<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent" >
    <include layout="@layout/title_text"></include>
    <TextView
        android:layout_marginTop="35dp"
        android:background="#dadada"
        android:layout_width="match_parent"
        android:layout_height="1dp" />
    <LinearLayout
        android:paddingBottom="13dp"
        android:background="#fff"
        android:paddingTop="13dp"
        android:paddingLeft="13dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="17sp"
            android:layout_gravity="center_vertical"
            android:textStyle="bold"
            android:text="新\u2000密\u2000码"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <com.jiuan.android.app.yilife.config.EditTextWithDel
            android:layout_marginRight="10dp"
            android:paddingLeft="10dp"
            android:textSize="17sp"
            android:layout_gravity="center_vertical"
            android:background="@null"
            android:inputType="textPassword"
            android:id="@+id/creat_new_firstpassword"
            android:hint="密码6-16个字符，不能包含空格"
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <TextView
        android:layout_marginLeft="50dp"
        android:background="#dadada"
        android:layout_width="match_parent"
        android:layout_height="1dp" />
    <LinearLayout
        android:paddingBottom="13dp"
        android:background="#fff"
        android:paddingTop="13dp"
        android:paddingLeft="13dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_gravity="center_vertical"
            android:textStyle="bold"
            android:textSize="17sp"
            android:text="再次确认"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <com.jiuan.android.app.yilife.config.EditTextWithDel
            android:layout_marginRight="10dp"
            android:paddingLeft="10dp"
            android:textSize="17sp"
            android:layout_gravity="center_vertical"
            android:background="@null"
            android:inputType="textPassword"
            android:id="@+id/creat_new_secondpassword"
            android:hint="再次输入密码"
            android:layout_width="wrap_content"
            android:layout_weight="4"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <TextView
        android:background="#dadada"
        android:layout_width="match_parent"
        android:layout_height="1dp" />

    <TextView
        android:layout_marginTop="15dp"
        android:textSize="15sp"
        android:gravity="center_horizontal"
        android:text="提示:凭手机号及设定密码进行登录"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>
