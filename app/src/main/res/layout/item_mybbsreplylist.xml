<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="#fff"
    android:layout_height="wrap_content">
    <LinearLayout
        android:background="#fff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    <com.android.volley.toolbox.NetworkImageView
        android:layout_marginLeft="7dp"
        android:layout_marginRight="6dp"
        android:id="@+id/iv_myreply_icon"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical" />
    <LinearLayout
        android:paddingBottom="2dp"
        android:background="#e4f4ff"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:layout_gravity="center_vertical"
            android:id="@+id/tv_myreply_title"
            android:textSize="15sp"
            android:textColor="#858585"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:text="title"
            android:singleLine="true"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>
    </LinearLayout>

    <ImageView
        android:layout_marginLeft="36dp"
        android:background="@drawable/line"
        android:layout_width="match_parent"
        android:layout_height="1dp" />
    <RelativeLayout
        android:orientation="horizontal"
        android:background="#fff"
        android:paddingTop="13dp"
        android:paddingBottom="13dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">




            <TextView
                android:layout_marginRight="23dp"
                android:layout_marginLeft="40dp"
                android:id="@+id/tv_myreply_reply"
                android:text="回复aa"
                android:textSize="15sp"
                android:textColor="#000"
                android:singleLine="true"
                android:ellipsize="end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    <LinearLayout
        android:paddingBottom="6dp"
        android:background="#fff"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <RelativeLayout
            android:paddingRight="23dp"
            android:layout_marginTop="6dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView

                android:id="@+id/tv_myreply_nicheng"
                android:layout_marginLeft="40dp"
                android:textSize="12sp"
                android:text="12345678900"
                android:singleLine="true"
                android:textColor="#209df3"
                android:layout_width="76sp"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:layout_toLeftOf="@+id/layout_date"

                android:layout_marginRight="5dp"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:drawableLeft="@drawable/icon_count"
                    android:drawablePadding="2dp"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:layout_marginLeft="2dp"
                    android:textSize="12sp"
                    android:ellipsize="end"
                    android:text="2221"
                    android:id="@+id/tv_myreply_count"
                    android:layout_width="46dp"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/layout_date"
                android:layout_alignParentRight="true"
                android:paddingRight="5dp"
                android:gravity="right"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <!--<ImageView-->
                    <!--android:src="@drawable/icon_calendar"-->
                    <!--android:layout_width="15dp"-->
                    <!--android:layout_height="15dp" />-->
                    <TextView
                        android:drawableLeft="@drawable/icon_calendar"
                        android:drawablePadding="2dp"
                        android:singleLine="true"
                        android:textSize="12sp"
                        android:text="2011-11-11"
                        android:id="@+id/tv_myreply_day"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <LinearLayout
                    android:layout_marginLeft="7dp"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <!--<ImageView-->
                    <!--android:src="@drawable/icon_time"-->
                    <!--android:layout_width="15dp"-->
                    <!--android:layout_height="15dp" />-->
                    <TextView
                        android:drawableLeft="@drawable/icon_time"
                        android:drawablePadding="2dp"
                        android:singleLine="true"
                        android:textSize="12sp"
                        android:text="3:33"
                        android:id="@+id/tv_myreply_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>