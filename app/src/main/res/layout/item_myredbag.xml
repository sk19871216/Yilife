<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fff"
    >
    <LinearLayout
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <TextView
        android:id="@+id/tv_money_detail"
        android:layout_marginLeft="25dp"
        android:text="-2.0"
        android:textSize="24sp"
        android:textColor="#209df3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:gravity="bottom"
        android:layout_toRightOf="@+id/tv_money_detail"
        android:layout_marginLeft="3dp"
        android:textSize="12sp"
        android:text="元"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_marginRight="20dp"
        android:layout_alignParentRight="true"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:singleLine="true"
            android:textColor="#393939"
            android:id="@+id/tv_redbag_useto"
            android:layout_marginTop="2dp"
            android:text="充话费"
            android:textSize="14sp"
            android:layout_marginBottom="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="12sp"
                android:textColor="#858585"
                android:id="@+id/tv_redbag_day"
                android:text="2011-11-11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:textSize="12sp"
                android:textColor="#858585"
                android:layout_marginLeft="15dp"
                android:id="@+id/tv_redbag_time"
                android:text="22:22"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
</RelativeLayout>